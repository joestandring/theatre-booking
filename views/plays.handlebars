<!doctype html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Plays</title>
		<meta name="description" content="All upcoming plays">
		<meta name="author" content="Joe Standring">
    <link href="https://fonts.googleapis.com/css?family=Libre+Franklin:400,700" rel="stylesheet"> 
		<link href="{{host}}/style.css" type="text/css" rel="stylesheet" />
	</head>
	<body>
		<header>
      <a class="title" href="/"><b>THEATRE BOOKING</b></a>
			{{#if authorised}}
				<a class="page" href="/logout">Log out</a>
        <a class="page" href="/secure/cart">Cart</a>
			{{else}}
				<a class="page" href="/login">Log in</a>
			{{/if}}
      <a class="page active" href="/plays">Plays</a>
      <a class="page" href="/">Home</a>
		</header>
		{{#if msg}}
 			<p class="msg">{{msg}}</p>
		{{/if}}
    
    <main>
      <h1>All plays</h1>
      <br />
      
      <div class="imglink">
        <a href="/plays/{{records.[0].id}}">
          <img src="thumbnails/{{records.[0].thumb}}" />
          <div class="imgcontent">
            <h2>{{records.[0].name}}</h2>
            <p>{{records.[0].first}} - {{records.[0].last}}</p>
          </div>
        </a>
      </div>
      
      <div class="imglink">
        <a href="/plays/{{records.[1].id}}">
          <img src="thumbnails/{{records.[1].thumb}}" />
          <div class="imgcontent">
            <h2>{{records.[1].name}}</h2>
            <p>{{records.[1].first}} - {{records.[1].last}}</p>
          </div>
        </a>
      </div>
      
      <div class="imglink">
        <a href="/plays/{{records.[2].id}}">
          <img src="thumbnails/{{records.[2].thumb}}" />
          <div class="imgcontent">
            <h2>{{records.[2].name}}</h2>
            <p>{{records.[2].first}} - {{records.[2].last}}</p>
          </div>
        </a>
      </div>
    </main>
    
    <div class="footer">
      <p>&copy; Joe Standring 2020</p>
    </div>
	</body>
</html>
