<!doctype html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Home</title>
		<meta name="description" content="Welcome to the theatre booking system">
		<meta name="author" content="Joe Standring">
    <link href="https://fonts.googleapis.com/css?family=Libre+Franklin:400,700" rel="stylesheet"> 
		<link href="{{host}}/style.css" type="text/css" rel="stylesheet" />
	</head>
	<body>
		<header>
      <a class="title" href="/"><b>THEATRE BOOKING</b></a>
			{{#if authorised}}
				<a class="page" href="/logout">Log out</a>
			{{else}}
				<a class="page" href="/login">Log in</a>
			{{/if}}
      <a class="page" href="/plays">Plays</a>
      <a class="page active" href="/">Home</a>
		</header>
		{{#if msg}}
 			<p class="msg">{{msg}}</p>
		{{/if}}
    
    <main>
      <h1>Upcoming performances</h1>
      <br />
      
      <div class="imglink">
        <a href="/plays/{{latest.id}}">
          <img src="thumbnails/{{latest.thumb}}" />
          <div class="imgcontent">
            <h2>{{latest.name}}</h2>
            <p>{{latest.first}} - {{latest.last}}</p>
          </div>
        </a>
      </div>
    </main>
    
    <div class="footer">
      <p>&copy; Joe Standring 2020</p>
    </div>
	</body>
</html>
